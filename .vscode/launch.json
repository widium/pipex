    "version": "0.2.0",
    "configurations": 
    [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "cwd"  : "${workspaceFolder}",
            "program": "${workspaceFolder}/pipex",
            "args" : ["in_file", "\"grep main.c\"", "\"cat -e\"", "\"wc -l\"", "out_file"],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }

    ]
}